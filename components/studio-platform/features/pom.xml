<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>wso2-integrationstudio-platform-parent</artifactId>
        <groupId>org.wso2.integrationstudio</groupId>
        <version>7.2.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <artifactId>wso2-integrationstudio-platform-features</artifactId>
    <packaging>pom</packaging>
    <name>WSO2 Integration Studio Platform Features</name>
    <modules>
        <module>org.wso2.integrationstudio.kernel.feature</module>
	    <module>org.wso2.integrationstudio.kernel.wso2plugins.samples.feature</module>

        <module>org.wso2.integrationstudio.capp.feature</module>
        <module>org.wso2.integrationstudio.carbon.server.feature</module>
        <module>org.wso2.integrationstudio.carbon.server-40.feature</module>
        <module>org.wso2.integrationstudio.carbon.server-42.feature</module>
        <module>org.wso2.integrationstudio.carbon.server-44.feature</module>
        <module>org.wso2.integrationstudio.carbon.server-44ei.feature</module>
        <module>org.wso2.integrationstudio.carbon.server-44microei.feature</module>
        <module>org.wso2.integrationstudio.carbon.server-44microei11.feature</module>
        <module>org.wso2.integrationstudio.carbon.server-44microei12.feature</module>
        <module>org.wso2.integrationstudio.carbon.server-remote.feature</module>
        <module>org.wso2.integrationstudio.dashboard.feature</module>
        <module>org.wso2.integrationstudio.kernel.registry.core.feature</module>
        <module>org.wso2.integrationstudio.kernel.security.feature</module>
        <module>org.wso2.integrationstudio.kernel.utils.feature</module>
        <module>org.wso2.integrationstudio.kernel.wso2plugins.default.samples.feature</module>
        <module>org.wso2.integrationstudio.library.artifact.feature</module>
        <module>org.wso2.integrationstudio.platform.libraries.feature</module>
        <module>org.wso2.integrationstudio.usr.management.feature</module>
        <module>org.wso2.integrationstudio.mvn.multimodule.feature</module>
        <module>org.wso2.integrationstudio.web.ui.feature</module>
        <module>org.wso2.integrationstudio.cloud.utils.feature</module>
        <module>org.wso2.integrationstudio.eclipse.docker.distribution.feature</module>

        <module>org.wso2.integrationstudio.eclipse.ei.project.feature</module>
    </modules>
    <distributionManagement>
        <repository>
            <id>wso2-maven2-repository</id>
            <name>WSO2 Maven2 Repository</name>
            <url>scp://dist.wso2.org/home/httpd/dist.wso2.org/maven2/</url>
        </repository>
    </distributionManagement>
    <repositories>
        <repository>
            <id>wso2-maven2-repo</id>
            <name>WSO2 Maven2 Repo</name>
            <url>https://dist.wso2.org/maven2/</url>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>wso2-maven2-repository</id>
            <url>https://dist.wso2.org/maven2</url>
        </pluginRepository>
        <pluginRepository>
            <id>wso2-maven2-snapshot-repository</id>
            <url>https://dist.wso2.org/snapshots/maven2</url>
        </pluginRepository>
    </pluginRepositories>
    <profiles>
     <profile>
       <id>devsrelease</id>
           <build>
              <plugins>
                 <plugin>
                  <groupId>org.apache.maven.plugins</groupId>
                  <artifactId>maven-jarsigner-plugin</artifactId>
                  <version>1.2</version>
                  <configuration>
                    <keystore>${keystore.path}</keystore>
                    <storepass>${keystore.store.password}</storepass>
                    <alias>selfsigned</alias>
                    <keypass>${keystore.key.password}</keypass>
                  </configuration>
                    <executions>
                      <execution>
                        <id>sign</id>
                        <goals>
                          <goal>sign</goal>
                        </goals>
                      </execution>
                    </executions>
                </plugin>
              </plugins>
           </build>
     </profile>
   </profiles>
</project>
