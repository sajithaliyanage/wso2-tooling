			<plugin>
			 <groupId>com.coderplus.maven.plugins</groupId>
			 <artifactId>copy-rename-maven-plugin</artifactId>
			 <version>1.0</version>
			 <executions>
				 <execution>
					 <id>rename-file</id>
					 <phase>install</phase>
					 <goals>
						 <goal>rename</goal>
					 </goals>
					 <configuration>
						 <fileSets>
								<fileSet>
									<sourceFile>${project.basedir}/target/products/WSO2-Developer-Studio-linux.gtk.x86_64.zip</sourceFile>
									<destinationFile>${project.basedir}/target/products/WSO2-Developer-Studio-${product.id}-linux-gtk-x86_64-${product.version}.zip</destinationFile>
								</fileSet>
								<fileSet>
									<sourceFile>${project.basedir}/target/products/WSO2-Developer-Studio-linux.gtk.x86.zip</sourceFile>
									<destinationFile>${project.basedir}/target/products/WSO2-Developer-Studio-${product.id}-linux-gtk-x86-${product.version}.zip</destinationFile>
								</fileSet>
								<fileSet>
									<sourceFile>${project.basedir}/target/products/WSO2-Developer-Studio-macosx.cocoa.x86_64.zip</sourceFile>
									<destinationFile>${project.basedir}/target/products/WSO2-Developer-Studio-${product.id}-macosx-cocoa-x86_64-${product.version}.zip</destinationFile>
								</fileSet>
								<fileSet>
									<sourceFile>${project.basedir}/target/products/WSO2-Developer-Studio-win32.win32.x86.zip</sourceFile>
									<destinationFile>${project.basedir}/target/products/WSO2-Developer-Studio-${product.id}-win32-x86-${product.version}.zip</destinationFile>
								</fileSet>
								<fileSet>
									<sourceFile>${project.basedir}/target/products/WSO2-Developer-Studio-win32.win32.x86_64.zip</sourceFile>
									<destinationFile>${project.basedir}/target/products/WSO2-Developer-Studio-${product.id}-win32-x86_64-${product.version}.zip</destinationFile>
								</fileSet>
							</fileSets>
					 </configuration>
				 </execution>
